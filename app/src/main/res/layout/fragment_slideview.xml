<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/back_card"
        android:layout_width="800dp"
        android:layout_height="400dp"
        android:layout_centerInParent="true"
        app:cardBackgroundColor="#80fcfbfc"
        app:cardCornerRadius="@dimen/corner_radius"
        app:cardElevation="0dp">

    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:id="@+id/main_card"
        android:layout_width="720dp"
        android:layout_height="600dp"
        android:layout_centerInParent="true">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/card_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/image_lemon"
            app:riv_corner_radius="32dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <!-- 사진 어둡게 android:background="@drawable/foreground_image_cover"  /> -->

        <LinearLayout
            android:layout_width="344dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="48dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="200dp"
                android:fontFamily="@font/spoqa_bold"
                android:textColor="@color/colorWhite255"
                android:textSize="20dp"
                android:textStyle="bold"
                app:fontFamily="@font/kidari" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="36dp"
                android:fontFamily="@font/spoqa_regular"
                android:textColor="@color/colorWhite255"
                android:textSize="20dp"
                android:textStyle="bold"
                app:fontFamily="@font/kidari" />

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="36dp"
                android:fontFamily="@font/spoqa_light"
                android:lineSpacingMultiplier="1.8"
                android:textColor="@color/colorWhite255"
                android:textSize="@dimen/description_size" />

            <Button
                android:id="@+id/button"
                android:layout_width="150dp"
                android:layout_height="48dp"
                android:layout_gravity="bottom|center"
                android:layout_marginTop="140dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/background_button_select"
                android:fontFamily="@font/spoqa_regular"
                android:text="@string/button_text"
                android:textColor="@drawable/text_button_select"
                android:textSize="@dimen/button_text_size" />

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>